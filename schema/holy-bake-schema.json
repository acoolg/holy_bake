{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "array",
    "items": {
        "type": "object",
        "properties": {
            "keyword": {
                "type": "string",
                "enum": [
                    "say",
                    "command",
                    "title",
                    "node",
                    "create",
                    "event",
                    "scoreboard",
                    "camera"
                ]
            },
            "args": {
                "type": "array",
                "items": {
                    "type": "string"
                }
            }
        },
        "required": [
            "keyword"
        ]
    }
}